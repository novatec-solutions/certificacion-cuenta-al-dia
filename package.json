{
  "scripts": {
    "test": "jest --coverage",
    "test-watch": "jest --watch",
    "doc": "jsdoc -c jsdoc.json"
  },
  "dependencies": {
    "jest": "^29.5.0",
    "mini-ali-ui": "^1.4.1"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "functions": 100,
        "statements": 80
      }
    },
    "collectCoverageFrom": [
      "**/main/domain/**/*.{js,jsx}"
    ]
  },
  "devDependencies": {
    "jsdoc": "^4.0.2"
  }
}